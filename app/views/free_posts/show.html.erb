<p style="color: green"><%= notice %></p>


  <p>
    <strong>タイトル:</strong>
    <%= @free_post.title %>
  </p>

  <p>
    <strong>本文:</strong>
    <%= @free_post.body %>
  </p>

  <p>
    <strong>作成日時:</strong>
    <%= @free_post.created_at %>
  </p>

  <p>
    <strong>更新日時:</strong>
    <%= @free_post.updated_at %>
  </p>

  <p>
  作成者: <%= @free_post.user ? @free_post.user.id : '不明' %>
  </p> 

<div>
  <%= link_to "この投稿を編集", edit_free_post_path(@free_post) %> |
  <%= link_to "投稿一覧に戻る", free_posts_path %>

  <%= button_to "この投稿を消す", @free_post, method: :delete %>
</div>
<%= render 'comments/form', comment: @comment, free_post: @free_post %>
  <table class="table">
    <tbody id = "table-comment">
      <%= render @comments %>
    </tbody>
  </table>