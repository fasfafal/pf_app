<h1>献血ルームに関する掲示板</h1>

<div id="free_posts">
  <% @free_posts.each do |free_post| %>
    <p>
      <%= link_to free_post.title, free_post %>
    </p>
    <p>
      作成者: <%= free_post.user ? free_post.user.id : '不明' %>
    </p>
  <% end %>
</div>

