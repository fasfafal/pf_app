<%= form_with(model: free_post) do |form| %>
  <% if free_post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(free_post.errors.count, "エラー") %>がこの投稿の保存を妨げています:</h2>

      <ul>
        <% free_post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div>
    <%= form.label :タイトル, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :本文, style: "display: block" %>
    <%= form.text_field :body %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
