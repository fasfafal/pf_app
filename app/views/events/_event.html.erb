<div id="<%= dom_id event %>">
  <p>
    <strong>User:</strong>
    <%= event.user_id %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= event.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= event.body %>
  </p>

  <% if event.avatar? %>
    <p>
      <strong>Avatar:</strong>
      <%= image_tag event.avatar.url %>
    </p>
  <% end %>>

</div>
